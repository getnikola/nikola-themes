{#  -*- coding: utf-8 -*- #}
{% extends 'base.tmpl' %}
{% block content %}
        <!--Body content-->
        <div class="postbox">
        <h1>{{ title }}</h1>
        <ul class="list-unstyled">
        {% for post in posts %}
            <li><a href="{{ post.permalink() }}">[{{ post.formatted_date(date_format) }}] {{ post.title() }}</a>
        {% endfor %}
        </ul>
        </div>
        <!--End of body content-->
{% endblock %}