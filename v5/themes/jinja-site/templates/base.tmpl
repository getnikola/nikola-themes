{# -*- coding: utf-8 -*- #}
{% import 'base_helper.tmpl' as base_helper with context %}
{{ set_locale(lang) }}
<!DOCTYPE html>
<html lang="{{ lang }}">
<head>
    {{ base_helper.html_head() }}
    {% block extra_head %}
    {% endblock %}
    {{ extra_head_data }}
</head>
<body>
<!-- Menubar -->
<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <div class="container">

        <!-- .btn-navbar is used as the toggle for collapsed navbar content -->
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </a>

            <a class="brand" href="{{ abs_link('/') }}">
            {{ blog_title }}
            </a>
            <!-- Everything you want hidden at 940px or less, place within here -->
            <div class="nav-collapse collapse">
                <ul class="nav">
                    {{ base_helper.html_sidebar_links() }}
                </ul>
                {% if search_form %}
                    {{ search_form }}
                {% endif %}
                <ul class="nav pull-right">
                {% block belowtitle %}
                {% if translations|length > 1 %}
                    <li>{{ base_helper.html_translations() }}</li>
                {% endif %}
                {% endblock %}
                {% if not hide_sourcelink %}
                {% block sourcelink %}{% endblock %}
                {% endif %}
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- End of Menubar -->
<div class="container-fluid" id="container-fluid">
    <!--Body content-->
    <div class="row-fluid">
    <div class="span2"></div>
    <div class="span8">
    {% block content %}{% endblock %}
    </div>
    </div>
    <!--End of body content-->
</div>
<div class="footerbox">
    {{ content_footer }}
</div>
{{ base_helper.html_social() }}
{{ base_helper.late_load_js() }}
{{ analytics }}
    <script type="text/javascript">jQuery("a.image-reference").colorbox({rel:"gal",maxWidth:"80%",maxHeight:"80%",scalePhotos:true});</script>
</body>
